<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="news"
            type="jyotti.apexing.apexing_android.data.model.main.news.News" />

        <variable
            name="viewHolder"
            type="jyotti.apexing.apexing_android.ui.component.NewsAdapter.NewsViewHolder" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/divider"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/layout_news"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:letterSpacing="-0.05"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:text="@{news.title}"
                android:textColor="@color/main"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_news_image"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:onClick="@{() -> viewHolder.onClickNewsItem(news.link)}"
                    android:scaleType="fitXY"
                    android:tintMode="src_atop"
                    app:setGlideImage="@{news.img}"
                    app:tint="#99000000" />

                <TextView
                    android:id="@+id/tv_tab_to_detail"
                    style="@style/TextViewDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/tab_to_detail"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>